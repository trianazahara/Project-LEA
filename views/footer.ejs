<script>
  document.getElementById('feedbackForm').addEventListener('submit', function(e) {
    e.preventDefault();

    const heroInput = document.getElementById('heroInput').value;

    fetch('/mahasiswa/send-feedback', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ heroInput: heroInput })
    })
    .then(response => response.json())
    .then(data => {
      if (data.message === "Feedback successfully sent") {
        Swal.fire({
          title: 'Success!',
          text: 'Your feedback has been sent successfully.',
          icon: 'success',
          confirmButtonText: 'OK'
        });
        document.getElementById('heroInput').value = ''; // Clear the textarea
      } else {
        throw new Error('Failed to send feedback');
      }
    })
    .catch(error => {
      Swal.fire({
        title: 'Error!',
        text: 'Failed to send feedback. Please try again.',
        icon: 'error',
        confirmButtonText: 'OK'
      });
    });
});
</script>
